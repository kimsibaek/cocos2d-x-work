<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.ex25_xmljsonex.MainActivity" >

    <Button
        android:id="@+id/btnJson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnXml1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:text="Json 1" />

    <Button
        android:id="@+id/btnJson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnJson1"
        android:layout_below="@+id/btnJson1"
        android:layout_marginTop="20dp"
        android:text="Json 2" />

    <Button
        android:id="@+id/btnJson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnJson2"
        android:layout_below="@+id/btnJson2"
        android:layout_marginTop="22dp"
        android:text="Json 3" />

    <Button
        android:id="@+id/btnXml1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnJson3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Xml 1" />

</RelativeLayout>
